# MANIFEST.in - Include data files in source distributions
# This ensures Parquet data files are included when building sdist packages

# Include all Parquet data files
recursive-include syng_bts/data *.parquet

# Include the py.typed marker for PEP 561 type checking
include syng_bts/py.typed

# Include package metadata
include LICENSE
include README.md
include pyproject.toml

# Include documentation source
recursive-include docs *.rst *.py *.bat Makefile

# Exclude generated files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude *.csvplot
global-exclude *_generated.csv
global-exclude *_loss.csv
